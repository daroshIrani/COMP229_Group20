<div class="container">
    <h1>Survey List</h1>
    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">Title</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="colgroup" colspan ="4" class="text-center" >Action</th> 
                    </tr>
                </thead>
                <tbody id="surveyList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < surveys.length; count++) { %>
                        <tr>
                            <td scope="row"><%= surveys[count].title %></td>
                            <td scope="row"><%= surveys[count].startDate %></td>
                            <td scope ="row"><%= surveys[count].endDate %></td>
                            <% if(displayName) { %>

                            <td class="text-center col-1">
                                <a href="/surveys-reports/<%= surveys[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Report</a>
                            </td>

                            
                            <td class="text-center col-1">
                                <a href="/survey-edit/<%= surveys[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/survey-delete/<%= surveys[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                            
                            <% } else { %>

                                <td class="text-center col-1">
                                    <a href="/surveys-participate/<%= surveys[count]._id %>"
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Participate</a>
                                </td>

                            <% } %> 
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <div class="d-grid gap-2 col-4 mx-auto">
            <% if(displayName) { %>
            <a href="/survey-add1" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Create a Survey - Template 1</a>

            <a href="/survey-add2" class="btn btn-secondary" role="button">
                <i class="fas fa-plus-circle"></i> Create a Survey - Template 2</a>
            <% } %>
            </div>
        </div>
    </div>
</div>
